{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

  <form method="post">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container row   mt-5">
      <div class="d-block p-5 offset-md-7 col-sm-6 col-md-4 bg-light card">
        <div class="card-header text-center bg-white h5 font-italic mb-4">
          Connexion</div>

        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required="required" autofocus="autofocus">
        <label for="inputPassword" class="mt-3">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required="required">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
					Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					See https://symfony.com/doc/current/security/remember_me.html
			
					<div class="checkbox mb-3">
						<label>
							<input type="checkbox" name="_remember_me"> Remember me
						</label>
					</div>
				#}

        <div class="d-grid gap-2">
          <button class="btn btn-lg btn-block btn-success mt-4" type="submit">
            Se connecter
          </button>
        </div>

      </form>

    </div>

  </div>

</div>

{% endblock %}
