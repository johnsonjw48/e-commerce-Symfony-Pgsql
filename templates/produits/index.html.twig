{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}

  <div class="container">
    <h1 class="text-center mt-5 mb-5">Découvrez nos produit</h1>

    <div class="row">
      <div class="col-md-3">
        <div class="h3 fst-italic">Filtrer</div>
      </div>
      <div class="col-md-9">

        <div class="row">

          {% for produit in produits %}

            <div class="col-md-4 mb-5 card ">
              <div class="product-item text-center">
                <a href="{{ path('app_produits_show', {'id': produit.id}) }}"><img src="/images/{{produit.images}}" alt="{{produit.name}}" class="img-fluid"></a>
                <h5>{{produit.name}}</h5>
                <p>{{produit.category}}</p>
                <p class="mb-5">{{produit.description}}</p>
                <div class="d-flex justify-content-around">
                  <p class="fw-bold">{{produit.price | number_format(2, '.', ',')}}
                    €</p>

                  <a href="{{ path('cart_add', {'id': produit.id}) }}" class="btn btn-success">
                    <i class="fa fa-shopping-cart"></i>
                    Ajouter</a>
                </div>
              </div>
            </div>

          {% endfor %}

        </div>

      </div>
    </div>

  </div>

{% endblock %}